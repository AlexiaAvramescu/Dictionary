<Page x:Class="Dictionary.Pages.AdminLogin"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Dictionary.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="AdminLogin">

    <Grid Background="White">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TextBlock Text="Admin Login" Style="{StaticResource HeaderTextBlockStyle}" HorizontalAlignment="Center" Margin="0,133,0,-124" Grid.Row="3"/>

        <TextBlock Text="Username:" Grid.Row="3" Margin="220,198,-180,-175"/>
        <TextBox x:Name="UsernameTextBox" Grid.Row="3" Margin="300,197,300,-175" Width="200"/>

        <!-- Password -->
        <TextBlock Text="Password:" Grid.Row="3" Margin="220,225,-180,-203"/>
        <PasswordBox x:Name="PasswordBox" Grid.Row="3" Margin="300,225,300,-203" Width="200"/>


        <Button Content="Login" Grid.Row="3" Margin="0,260,0,-234" Width="100" HorizontalAlignment="Center" Click="loginBtn_Click"/>
    </Grid>
</Page>
